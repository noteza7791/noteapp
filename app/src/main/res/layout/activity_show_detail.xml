<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="icepbru.monchaikaewbuadee.pbru1.ShowDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/photomapiss">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@android:color/holo_green_light"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/icon_detail"
                android:layout_height="@dimen/icon_detail"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:nestedScrollingEnabled="false"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="#6fffffff">

            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
